@using FlouristStudio
@model SignUp
@{  
}
<head>
    <link rel="stylesheet" href="~/css/SignUp.css" asp-append-version="true" />
   
</head>
   <div class="container-signup right-panel-active" id="container-signup">
      <div class="form-container sign-up-container">
         <form method="post" action="/SignUp/SignUp">
            <h1>Create Account</h1>
            <div class="social-container">
               <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
               <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
               <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
            </div>
            <input asp-for="Name" placeholder="Name">
            <span asp-validation-for="Name"></span>
            <input asp-for="UserName" placeholder="UserName">
            <span asp-validation-for="UserName"></span>
            <input asp-for="Email" placeholder="Email" type="email">
            <span asp-validation-for="Email"></span>
            <input asp-for="Password" placeholder="Password" type="password">
            <span asp-validation-for="Password"></span>
            <input asp-for="ConfirmPassword" placeholder="Confirm Password" type="password">
            <span asp-validation-for="ConfirmPassword"></span>
            <input type="submit" value="Sign Up" class="inp-btn-custom" />
         </form>
      </div>
      <div class="form-container sign-in-container">
         <form method="post" action="/SignUp/SignIn">
            <h1>Sign in</h1>
            <div class="social-container">
               <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
               <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
               <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
            </div>
            <input asp-for="UserName" placeholder="UserName">
            <span asp-validation-for="UserName"></span>
            <input asp-for="Password" placeholder="Password">
            <span asp-validation-for="Password"></span>
            <a href="#">Forgot your password?</a>
            <input type="submit" value="Sign In" class="inp-btn-custom"/>
         </form>
      </div>
      <div class="overlay-container">
         <div class="overlay">
            <div class="overlay-panel overlay-left">
               <h1>Welcome To Our Florist Studio!</h1>
               <p>We are dedicated to provide you the flowers with rich and varied colors, profusion of bloom, velvety petal textures and, a rich sweet scent on your doorstep.Choose your favourite from our range of beautiful & gorgeous fresh flower bouquets, floral box, vase arrangements, gift baskets and chocolates. Sign up now to send all these to your loved ones from anywhere in the world.</p>
               <p>Already Have an Account?</p>
               <button class="ghost inp-btn-custom" id="signIn">Sign In</button>
            </div>
            <div class="overlay-panel overlay-right">
               <h1>Welcome Back!</h1>
               <p>We are dedicated to provide you the flowers with rich and varied colors, profusion of bloom, velvety petal textures and, a rich sweet scent on your doorstep.Choose your favourite from our range of beautiful & gorgeous fresh flower bouquets, floral box, vase arrangements, gift baskets and chocolates. Sign up now to send all these to your loved ones from anywhere in the world.</p>
               <p>New to Florist Studio?</p>
               <button class="ghost inp-btn-custom" id="signUp">Sign Up</button>
            </div>
         </div>
      </div>
   </div>
   <script>
    const signUpButton = document.getElementById('signUp');
    const signInButton = document.getElementById('signIn');
    const container = document.getElementById('container-signup');
    console.log(container);
    signUpButton.addEventListener('click', () => {
        container.classList.add("right-panel-active");
    });

    signInButton.addEventListener('click', () => {
        container.classList.remove("right-panel-active");
    });
   </script>
